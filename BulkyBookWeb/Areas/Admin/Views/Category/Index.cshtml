@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}



<div class="container p-3">
    <div class="row pt-4">

    
    <div class="col-6">
       <h2 class="text-primary">Category List</h2>
    </div>
    <div class="col-6">
        <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Category
        </a>
    </div>
    </div>
    <br>
    <br>


<h1>Category</h1>
<table class="table table-striped">
 <thead>
    <tr>
      <th>Category Name</th>
      <th>Display Order</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    @foreach(var obj in Model)
        {
            <tr>
                <td>
                    @obj.Name
                </td>
                <td>
                    @obj.DisplayOrder
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a class="mx-2 btn btn-primary" asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" >Edit</a>
                    </div>
                    <div class="w-75 btn-group" role="group">
                        <a class="mx-2 btn btn-primary" asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" >Delete</a>
                    </div>
                </td>
            </tr>

        }
    </tbody>
</table>
</div>

